@model IEnumerable<MVCLibrary.Models.Inventory>

@{
    ViewBag.Title = "Index";
}
<div class="row" style="margin-bottom:30px;margin-top:30px;">
    // comment for backround color and image of the customer of index customer //
    <div class="col-lg-3">
        <img src="~/Images/Customers.jpg" width="100%" height="150px" />
        <div style="margin-top:20px;font-size:25px;text-align:center">
            @Html.ActionLink("Manage Customers", "Index", "Customer")
        </div>
    </div>
    <div class="col-lg-3">
        // comment for backround color and image of the manage book  //
        <img src="~/Images/Books.jpg" width="100%" height="150px" />
        <div style="margin-top:20px;font-size:25px;text-align:center">
            @Html.ActionLink("Manage Books", "Index", "Book")
        </div>
    </div>
    <div class="col-lg-3">
        // comment for backround color and image of the manage inventory   //
        <img src="~/Images/Inventory.jpg" width="100%" height="150px" />
        <div style="margin-top:20px;font-size:25px;text-align:center">
            @Html.ActionLink("Manage Inventory", "Index", "Inventory")
        </div>
    </div>
    <div class="col-lg-3">
        // comment for backround color and image of the manage computer  //
        <img src="~/Images/Computers.jpg" width="100%" height="150px" />
        <div style="margin-top:20px;font-size:25px;text-align:center">
            @Html.ActionLink("Manage Computers", "Index", "Computer")
        </div>
    </div>
</div>
<h2>Inventory's Management</h2>

<p>
    @Html.ActionLink("Add New Record", "Create")
</p>
<table class="table">
    // this comment is for the display  name of the table class book name , book author, book publish year cabin number //
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookAuthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookPublishYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CabinNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    { // this is use for the each name of model item , book name , book author, book publisher, cabin number //
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookPublishYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CabinNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | // comment for the edit button //
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })  // comment for the delete  button //
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Back to Menu", "Index", "Home")