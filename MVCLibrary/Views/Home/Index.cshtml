
@{
    ViewBag.Title = "Librarian Dashboard"; // this comment is use for the sadhboard title //
}

<h1 style="margin-bottom:40px;text-align:center;color:red;font-weight:900">Librarian Dashboard</h1>

<div class="row">
    // this is use for the backround color , width, hight and font size of class row customer id //
    <div class="col-lg-6">
        <div style="padding:25px;background-color:#fff;border-radius:10px;">
            <img src="~/Images/Customers.jpg" width="100%" height="150px" />
            <div style="margin-top:20px;font-size:25px;text-align:center">
                @Html.ActionLink("Manage Members", "Index", "Customer")
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        // this is use for the backround color , width, hight and font size of class row book id //
        <div style="padding:25px;background-color:#fff;border-radius:10px;">
            <img src="~/Images/Books.jpg" width="100%" height="150px" />
            <div style="margin-top:20px;font-size:25px;text-align:center">
                @Html.ActionLink("Manage Books Issue", "Index", "Book")
            </div>
        </div>
    </div>
    <div class="col-lg-6" style="margin-top:10px;">
        // this is use for the backround color , width, hight and font size of class row inventory  id //
        <div style="padding:25px;background-color:#fff;border-radius:10px;">
            <img src="~/Images/Inventory.jpg" width="100%" height="150px" />
            <div style="margin-top:20px;font-size:25px;text-align:center">
                @Html.ActionLink("Manage Books Inventory", "Index", "Inventory")
            </div>
        </div>
    </div>
    <div class="col-lg-6" style="margin-top:10px;">
        // this is use for the backround color , width, hight and font size of class row computer id //
        <div style="padding:25px;background-color:#fff;border-radius:10px;">
            <img src="~/Images/Computers.jpg" width="100%" height="150px" />
            <div style="margin-top:20px;font-size:25px;text-align:center">
                @Html.ActionLink("Manage Library Computers", "Index", "Computer")
            </div>
        </div>
    </div>
</div>

